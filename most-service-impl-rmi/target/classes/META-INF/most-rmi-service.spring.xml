<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
              http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
              http://www.springframework.org/schema/context
              http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config />


    <!-- RMI remote services -->
    <!-- AuthenticationService -->
    <bean id="authenticationServiceImpl" class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
        <property name="serviceUrl" value="rmi://localhost:1199/AuthenticationService"/>
        <property name="serviceInterface" value="bpi.most.service.api.AuthenticationService"/>
    </bean>

    <!-- ConnectorService -->
    <bean id="connectorServiceImpl" class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
        <property name="serviceUrl" value="rmi://localhost:1199/ConnectorService"/>
        <property name="serviceInterface" value="bpi.most.service.api.ConnectorService"/>
    </bean>

    <!-- DatapointService

    this is used from the "datapointServiceImpl" bean for rmi calls to the central service-impl instance.

    -->
    <bean id="datapointServiceRmiClient" class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
        <property name="serviceUrl" value="rmi://localhost:1199/DatapointService"/>
        <property name="serviceInterface" value="bpi.most.service.api.DatapointService"/>
    </bean>

    <!--

    this impl should be used by clients to transparently access real datapoints and virtual ones

    -->
    <bean id="datapointServiceImpl" class="bpi.most.client.rmi.DatapointServiceRmiClient" primary="true"/>

    <!-- ZoneService -->
    <bean id="zoneServiceImpl" class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
        <property name="serviceUrl" value="rmi://localhost:1199/ZoneService"/>
        <property name="serviceInterface" value="bpi.most.service.api.ZoneService"/>
    </bean>

</beans>
