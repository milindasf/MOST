<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:my="urn:import:bpi.most.client.utils.ui">
	<ui:style>
		
	</ui:style>
	<g:FlowPanel>
		<g:VerticalPanel>
			<g:HorizontalPanel>
				<g:Label>Start date/time: </g:Label>
				<my:DateTimePickerBox ui:field="startdate"></my:DateTimePickerBox>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label>End date/time: </g:Label>
				<my:DateTimePickerBox ui:field="enddate"></my:DateTimePickerBox>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label>Period: </g:Label>
				<g:TextBox ui:field="period"></g:TextBox>
				<g:Label>(leave empty or 0 for live data)</g:Label>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label>Mode: </g:Label>
				<g:VerticalPanel>
					<g:RadioButton ui:field="mode1" value="true" ui:name="mode">Mode
						1</g:RadioButton>
					<g:RadioButton ui:field="mode2" value="false"
						ui:name="mode">Mode 2</g:RadioButton>
					<g:RadioButton ui:field="mode3" value="false"
						ui:name="mode">Mode 3</g:RadioButton>
				</g:VerticalPanel>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:CheckBox ui:field="anaToBin">show analoge values as binary(if
					possible)</g:CheckBox>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Button ui:field="save">Save</g:Button>
				<g:Button ui:field="revert">Revert</g:Button>
			</g:HorizontalPanel>
		</g:VerticalPanel>

	</g:FlowPanel>
</ui:UiBinder> 